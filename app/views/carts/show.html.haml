%h2 Адрес получателя
.form
  .cart_form
    = simple_form_for @order do |f|
      = f.input :user_name, label: 'Имя, фамилия', class: '', id: ''
      = f.input :email, label: 'Email', type: 'text'
      = f.input :phone, label: 'Телефон', type: 'text'
